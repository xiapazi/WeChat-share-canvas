/* pages/shareOne/shareOne.wxss */

.c_canvas {
  width: 100%;
  position: fixed;
  top: 99999rpx;
  left: 0;
}

.global {
  width: 100%;
  /* height: 90%; *//* position: fixed; */
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: center;
  padding-top: 15rpx;
  top: 0;
  /* border: 1rpx solid red; */
}

.c_image {
  border-radius: 5rpx;
  margin: 0 auto;
  box-shadow: 0px 0px 8px 0px #aaa;
  /* border: 1rpx solid red; */
}

.c_button {
  background: linear-gradient(45deg, #09c3fe, #009aff);
  width: 38%;
  height: 88rpx;
  border-radius: 44rpx;
  margin-top: 43rpx;
  color: white;
  font-size: 35rpx;
  border: none;
}

.handover {
  position: fixed;
  top: 45rpx;
  width: 115rpx;
  height: 45rpx;
  font-size: 26rpx;
  letter-spacing: 5rpx;
  color: white;
  background-color: rgba(0, 0, 0, 0.27);
  border-radius: 44rpx;
  text-align: center;
  line-height: 45rpx;
  border: none;
}
